package com.baeldung.deepvsshallowcopy;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class ObjectCopyUtilsUnitTest {
    @Test
    public void whenShallowCopy_thenCopiedObjectEqualsOriginal() throws CloneNotSupportedException {
        
        List<Integer> originalList = new ArrayList<>();
        originalList.add(1);
        originalList.add(2);
        originalList.add(3);

        
        List<Integer> copiedList = ObjectCopyUtils.shallowCopy(originalList);

        
        assertArrayEquals(originalList.toArray(), copiedList.toArray());
    }

    @Test
    public void whenDeepCopy_thenCopiedObjectEqualsOriginal() throws Exception {
        
        List<Integer> originalList = new ArrayList<>();
        originalList.add(1);
        originalList.add(2);
        originalList.add(3);

        
        List<Integer> copiedList = ObjectCopyUtils.deepCopy(originalList);

        
        assertArrayEquals(originalList.toArray(), copiedList.toArray());
    }
}
